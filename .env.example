# ===========================
# FIREBASE CONFIGURATION
# ===========================
# Get these values from your Firebase Console:
# https://console.firebase.google.com/project/your-project/settings/general

VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ===========================
# GOOGLE APIS CONFIGURATION
# ===========================
# Google Places API Key for university data scraping
# Get this from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your-google-places-api-key-here
VITE_GOOGLE_API_KEY=your-google-places-api-key-here

# API Base URL for Google Maps Platform
VITE_API_BASE_URL=https://maps.googleapis.com/maps/api

# ===========================
# GOOGLE ADSENSE CONFIGURATION
# ===========================
# Your AdSense Publisher ID (format: ca-pub-xxxxxxxxxxxxxxxx)
# Get this from: https://www.google.com/adsense/
VITE_ADSENSE_CLIENT_ID=ca-pub-your-adsense-publisher-id

# AdSense Ad Unit Slot IDs for different ad positions
# Create these in your AdSense account
VITE_ADSENSE_BANNER_SLOT=your-banner-ad-slot-id
VITE_ADSENSE_SIDEBAR_SLOT=your-sidebar-ad-slot-id
VITE_ADSENSE_ARTICLE_SLOT=your-article-ad-slot-id
VITE_ADSENSE_FOOTER_SLOT=your-footer-ad-slot-id

# ===========================
# DEVELOPMENT CONFIGURATION
# ===========================
# Node environment
NODE_ENV=development

# Application URL (for development)
VITE_APP_URL=http://localhost:5173

# ===========================
# OPTIONAL CONFIGURATIONS
# ===========================
# Analytics (if using other services)
# VITE_GA_TRACKING_ID=your-google-analytics-id
# VITE_HOTJAR_ID=your-hotjar-id

# Email service (if implementing email features)
# EMAIL_SERVICE_API_KEY=your-email-service-key
# EMAIL_FROM=noreply@yourdomain.com

# Database backup (if using external backup service)
# BACKUP_SERVICE_KEY=your-backup-service-key
